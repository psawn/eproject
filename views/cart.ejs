                        <button class="remove-product">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-4 totals">
                <form class="cart-form" method="" action="/purchasesuccess">
                    <div class="input-form" style="margin-top:5px">
                        <label><i class="fas fa-user"></i> Full Name</label><br>
                        <input required type="text" name="fullname" class="long">
                    </div>
                    <div class="input-form">
                        <label><i class="fas fa-phone"></i> Phone Number</label><br>
                        <input required type="text" name="phonenumber" class="long">
                    </div>
                    <div class="input-form">
                        <label><i class="far fa-address-card"></i> Address</label><br>
                        <textarea required rows="7" type="text" name="address" class="long"></textarea>
                    </div>
                    <button type="submit" class="pay">Pay Now <span class="totals-value cart-total">325000</span><span>&nbsp VNƒê</span></button>
